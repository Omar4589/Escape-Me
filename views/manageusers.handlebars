<div class="bg-gray-100 min-h-screen p-5">
  <section class="text-slate-950 text-center pt-10 pb-5 w-4/5 mx-auto">
    <h1 class="text-4xl font-bold text-center py-2 lg:text-6xl xl:text-5xl">
      Manage Users
    </h1>
    <p class="text-xl text-center lg:text-3xl lg:py-5 xl:text-2xl">
      View, edit, or delete user accounts.
    </p>
  </section>

  <section class="py-3 px-5">
    <div class="flex justify-around mb-5">

      <div class="mb-5 flex justify-between items-center">
        <p class="text-lg font-bold mb-2">Filter by:</p>
        <select
          class="bg-white ml-5 h-10 px-5 rounded-full text-sm focus:outline-none"
        >
          <option value="">All</option>
          <!-- Add options for each escape room. -->
          <option value="name">Name</option>
          <option value="email">Email</option>
        </select>
      </div>

      <div class="relative">
        <input
          type="text"
          class="bg-white h-10 px-5 pr-10 rounded-full text-sm focus:outline-none"
          placeholder="Search users"
        />
        <button type="submit" class="absolute right-0 top-0 mt-2 mr-4">
          <!-- Add the SVG for the search icon here -->
        </button>
      </div>
    </div>

    <table id="users" class="w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th
            scope="col"
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
          >Name</th>
          <th
            scope="col"
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
          >Email</th>
          <th
            scope="col"
            class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider"
          >Date Created</th>
           <th
            scope="col"
            class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider"
          >Last Updated</th>
          <th
            scope="col"
            class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider"
          >Edit or Delete User</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        {{#each users}}
          <tr>
            <td class="px-6 py-4">{{this.name}}</td>
            <td class="px-6 py-4">{{this.email}}</td>
            <td class="px-6 py-4">{{formatDate this.created_at}}</td>
            <td class="px-6 py-4">{{formatDate this.updated_at}}</td>
            <td class="flex justify-center items-center px-6 py-4"><button
                class="mx-6 px-3 py-1 bg-green-500 text-white rounded hover:bg-green-700 mr-2"
              >✎</button>
              <button
                class="mx-6 px-3 py-1 bg-red-500 text-white rounded hover:bg-red-700"
              >✕</button></td>
          </tr>
        {{/each}}
      </tbody>

    </table>

  </section>
</div>